@model OnlineSupermarket.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "تسجيل الدخول";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Login" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="EmailOrPhone"></label>
        <input asp-for="EmailOrPhone" class="form-control" />
        <span asp-validation-for="EmailOrPhone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-check mt-2 mb-3">
        <input asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">تسجيل الدخول</button>
</form>

<script src="~/lib/jquery/dist/jquery.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}
