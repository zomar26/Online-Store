@model IEnumerable<OnlineSupermarket.Models.CartItem>

@{
    ViewData["Title"] = "Shopping Cart";
}

<h2 class="text-center mt-4 mb-4">🛒 Your Cart</h2>

@if (!Model.Any())
{
    <p class="text-center text-muted">Your cart is empty.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
                <th style="width: 250px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product?.Name</td>
                    <td>@item.Product?.Price.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Product?.Price * item.Quantity)$</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-1">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-end me-3">
        <h4>Total: @ViewBag.Total.ToString("C")</h4>

        <form asp-controller="Payment" asp-action="Index" method="get">
            <button type="submit" class="btn btn-success mt-3">Checkout</button>
        </form>
    </div>
}
