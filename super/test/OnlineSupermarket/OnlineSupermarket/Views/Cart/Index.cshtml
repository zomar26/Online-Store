@model IEnumerable<OnlineSupermarket.Models.CartItem>
@{
    ViewData["Title"] = "Shopping Cart";
}

<h2 class="text-center mt-4 mb-4">🛒 Your Cart</h2>

@if (!Model.Any())
{
        <p class="text-center text-white">Your cart is empty.</p>
}
else
{
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Subtotal</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                        <tr>
                            <td>@item.Product?.Name</td>
                            <td>@item.Product?.Price.ToString("C")</td>
                            <td>@item.Quantity</td>
                            <td>@(item.Product.Price * item.Quantity)$</td>
                            <td>
                                <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-info btn-sm me-1">Details</a>

                        @if (User.IsInRole("Admin"))
                        {
                                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-warning btn-sm me-1">Edit</a>
                        }

                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
            }
            </tbody>
        </table>

        <h4 class="text-end me-3">Total: @ViewBag.Total.ToString("C")</h4>

        <div class="text-end">
            <a asp-action="Checkout" class="btn btn-success btn-lg">Checkout</a>
        </div>
}
