@model OnlineSupermarket.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<h2 class="text-center mt-4 mb-4">🗑️ Delete Category</h2>

<div class="alert alert-danger text-center">
    Are you sure you want to delete the category: <strong>@Model.Name</strong>?
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="text-center">
        <input type="submit" value="Delete" class="btn btn-danger me-2" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
